{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "ezpz/countdown",
  "title": "Countdown",
  "category": "widgets",
  "icon": "clock",
  "description": "Renders a block counting down to a specified date and time.",
  "keywords": ["countdown", "timer", "clock", "date"],
  "version": "1.0.0",
  "textdomain": "jellypress",
  "script": ["countdown-init"],
  "supports": {
    "align": false,
    "alignText": true,
    "anchor": true,
    "color": {
      "background": true,
      "gradients": false,
      "link": false,
      "text": false
    },
    "customClassName": true,
    "html": false,
    "multiple": false
  },
  "styles": [],
  "acf": {
    "mode": "preview",
    "renderTemplate": "view.php",
    "postTypes": ["post", "page"]
  }
}
