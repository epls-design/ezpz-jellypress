{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "jellypress/accordion",
  "title": "Accordion",
  "category": "text",
  "icon": "editor-ul",
  "description": "Renders a block containing an accordion list; useful for FAQs.",
  "keywords": [
    "faq",
    "frequently asked questions",
    "question",
    "answer",
    "accordion",
    "drop down"
  ],
  "version": "1.0.0",
  "textdomain": "jellypress",
  "script": "aria-accordion",
  "supports": {
    "align": false,
    "alignText": true,
    "anchor": true,
    "color": {
      "background": true,
      "gradients": false,
      "link": false,
      "text": false
    },
    "customClassName": true,
    "html": false
  },
  "styles": [
    { "name": "default", "label": "Default", "isDefault": true },
    { "name": "hide-below-sm", "label": "Hide Mob" },
    { "name": "hide-above-sm", "label": "Hide Above Mob" }
  ],
  "acf": {
    "mode": "auto",
    "renderTemplate": "view.php",
    "postTypes": ["post", "page"]
  }
}
